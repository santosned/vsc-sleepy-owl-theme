{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "Launch Theme",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "preLaunchTask": "npm: build",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions",
        "${file}"
      ]
    },
    {
      "name": "Launch Theme (with extensions)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "preLaunchTask": "npm: build",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "${file}"]
    }
  ]
}
